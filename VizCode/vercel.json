{
  "version": 2,
  "builds": [
    {
      "src": "backend/backend.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/backend.cjs"
    },
    {
      "src": "/(.*\\.(js|css|svg|png|jpg|ico|json|txt|map))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm install && cd backend && npm install"
}