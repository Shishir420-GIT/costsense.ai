# Azure Cosmos DB for PostgreSQL Configuration Example
# Copy this to .env when deploying to Azure

# Azure Cosmos DB for PostgreSQL
# Replace with your actual cluster details from Azure Portal
DATABASE_URL=postgresql://citus:YOUR_STRONG_PASSWORD@c-costsense-XXXXX.postgres.cosmos.azure.com:5432/citus?sslmode=require

# Connection pool settings (optimized for Cosmos DB)
DATABASE_POOL_SIZE=30
DATABASE_MAX_OVERFLOW=60
DATABASE_POOL_PRE_PING=true

# Azure Cache for Redis
# Replace with your actual Redis details
REDIS_URL=rediss://:YOUR_REDIS_KEY@costsense-cache.redis.cache.windows.net:6380/0?ssl_cert_reqs=required

# Ollama (use Azure Container Instances or Container Apps)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b-instruct
OLLAMA_TIMEOUT=180
OLLAMA_MAX_RETRIES=3

# Application
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://costsense-frontend.azurewebsites.net,https://costsense.yourdomain.com

# AWS Credentials (from Azure Key Vault in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Azure Credentials (use Managed Identity in production)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# GCP Credentials
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECT_ID=

# ServiceNow
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=
